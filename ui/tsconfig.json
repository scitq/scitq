{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "module": "esnext",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "isolatedModules": false,
    "strict": true,
    "composite": true,
    "noEmit": false
  },
  "include": [
    "src/**/*.svelte",
    "gen"
  ],
  "exclude": [
    "node_modules",
    "src/**/*.d.ts"
  ]
}
