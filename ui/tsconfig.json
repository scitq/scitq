{
  "files": [],
  "references": [
    { "path": "./tsconfig.app.json" },
    { "path": "./tsconfig.node.json" }
  ],
  "compilerOptions": {
    "module": "esnext",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "isolatedModules": false,
    "strict": true,
    "composite": true,
    "noEmit": false,
    "types": ["vitest/globals"]  // Ajout√© ici pour inclure les types de Vitest
  },
  "include": [
    "src/**/*.svelte",
    "gen",
    "lib",
    "src/lib/api.ts",
    "src",
    "src/types/global.d.ts"

  ],
  "exclude": [
    "node_modules", 
    "**/*.test.ts"
  ]
}
