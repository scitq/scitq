{
  "extends": "@tsconfig/svelte/tsconfig.json",
  "compilerOptions": {
    "target": "ESNext",
    "useDefineForClassFields": true,
    "module": "ESNext",
    "resolveJsonModule": true,
    "allowJs": true,
    "checkJs": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "composite": true,
    "noEmit": false
  },
  "include": [
    "src",
    "gen/*"
  ],
  "exclude": [
    "node_modules",
  ]
}

