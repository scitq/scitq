{
  "name": "ui",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "typedoc": {
    "entryPoints": [
      "src"
    ],
    "out": "docs",
    "tsconfig": "tsconfig.json"
  },
  "scripts": {
    "docs": "typedoc",
    "dev": "vite --host",
    "build": "vite build",
    "preview": "vite preview",
    "gen-proto": "protoc --plugin=protoc-gen-ts=./node_modules/.bin/protoc-gen-ts --ts_out ./gen --proto_path=../proto taskqueue.proto"
  },
  "devDependencies": {
    "@protobuf-ts/plugin": "^2.11.1",
    "@sveltejs/vite-plugin-svelte": "^5.0.3",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/svelte": "^5.2.7",
    "@testing-library/user-event": "^14.6.1",
    "@tsconfig/svelte": "^5.0.4",
    "@types/google-protobuf": "^3.15.12",
    "@types/node": "^24.3.0",
    "jsdom": "^26.1.0",
    "svelte": "^5.27.0",
    "svelte-check": "^4.1.4",
    "tsdoc": "^0.0.4",
    "typedoc": "^0.28.3",
    "typescript": "~5.7.2",
    "vite": "^6.2.0",
    "vitest": "^3.1.2"
  },
  "dependencies": {
    "@protobuf-ts/grpcweb-transport": "^2.11.1",
    "chart.js": "^4.5.0",
    "dotenv": "^16.5.0",
    "google-protobuf": "^3.21.4",
    "grpc-web": "^1.5.0",
    "lucide-svelte": "^0.503.0",
    "protoc-gen-ts": "^0.8.7",
    "rxjs": "^7.8.2",
    "svelte-spa-router": "^4.0.1"
  },
  "main": "src/main.ts",
  "exports": {
    ".": "./src/main.ts"
  },
  "compilerOptions": {
    "module": "esnext",
    "allowJs": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "moduleResolution": "node",
    "isolatedModules": false,
    "strict": true,
    "composite": true,
    "noEmit": false
  },
  "include": [
    "src/lib/*.ts",
    "src/**/*.svelte",
    "gen/**/*.ts",
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
